extends header

block content
    section(class='f12 flex column')
        include navigation
        div.site_width.padding_big.margin_top_big
            form(action= config.url.admin.categories, class='bck b_white padding_small', method='post')
                select(id='category', name='category', class='anchor margin_bottom_small', required)
                    each category in categories
                        option(value= category) #{category}
                input(id='newCategory', name='newCategory', placeholder='Enter new category name', class='anchor margin_bottom_small', required)
                input(type='submit', id="send", value='Send', class='btn normal bck b_jet text color c_white anchor')
    include footer